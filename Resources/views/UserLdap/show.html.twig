{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{% trans %}admin.user.user{% endtrans %}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}admin.user.idLdap{% endtrans %}</th>
                <td>{{ entity.idLdap }}</td>
            </tr>
            <tr>
                <th>{% trans %}admin.user.valid{% endtrans %}</th>
                <td>{{ entity.valid }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('userldap') }}">
            {% trans %}admin.user.backList{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('userldap_edit', { 'id': entity.id }) }}">
            {% trans %}admin.user.edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
