{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>{% trans %}admin.role.role{% endtrans %}</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}admin.role.rolename{% endtrans %}</th>
                <td>{{ entity.roleName }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('roleldap') }}">
            {% trans %}admin.role.backList{% endtrans %}
        </a>
    </li>
    <li>
        <a href="{{ path('roleldap_edit', { 'id': entity.id }) }}">
            {% trans %}admin.role.edit{% endtrans %}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
